{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "adNicName": {
      "type": "string",
      "minLength": 1
    },
    "adVMName": {
      "type": "string",
      "minLength": 1
    },
    "adVMSize": {
      "type": "string",
      "defaultValue": "Basic_A1"
    },
    "adAdminUsername": {
      "type": "string"
    },
    "adAdminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string",
      "defaultValue": "contoso.local",
      "metadata": {
        "description": "FQDN"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "North Europe"
    },
    "VNETPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16"
    },
    "dCSubnetName": {
      "type": "string",
      "defaultValue": "DCSubnet"
    },
    "dCSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24"
    },
    "iisSubnetName": {
      "type": "string",
      "defaultValue": "IISSubnet"
    },
    "iisSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24"
    },
    "storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    }
  },
  "variables": {
    "adNicVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vNET')]",
    "adNicSubnetRef": "[concat(variables('adNicVnetID'), '/subnets/', parameters('dCSubnetName'))]",
    "adTemplateURL": "https://raw.githubusercontent.com/matousrokos/Azure/master/Templates/VM-DC/ConfigureDC.json",
    "adModulesURL": "https://raw.githubusercontent.com/matousrokos/Azure/master/Templates/VM-DC/DSC/CreateADPDC.ps1.zip",
    "adConfigurationFunction": "CreateADPDC.ps1\\CreateADPDC",
    "apiVersion": "2015-06-15",
    "storageName": "[concat('storage', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "name": "ProvisioningADDomainController",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-11-01",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', parameters('adnicName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('adTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adVMName": {
            "value": "[parameters('adVMName')]"
          },
          "adVMSize": {
            "value": "[parameters('adVMSize')]"
          },
          "adAdminUsername": {
            "value": "[parameters('adAdminUsername')]"
          },
          "adAdminPassword": {
            "value": "[parameters('adAdminPassword')]"
          },
          "storageName": {
            "value": "[variables('storageName')]"
          },
          "adNicName": {
            "value": "[parameters('adNicName')]"
          },
          "adModulesURL": {
            "value": "[variables('adModulesURL')]"
          },
          "adConfigurationFunction": {
            "value": "[variables('adConfigurationFunction')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          }
        }
      }
    },
      {
          "name": "vNET",
          "type": "Microsoft.Network/virtualNetworks",
          "location": "[resourceGroup().location]",
          "apiVersion": "[variables('apiVersion')]",
          "dependsOn": [ ],
          "tags": {
              "displayName": "vNET"
          },
          "properties": {
              "addressSpace": {
                  "addressPrefixes": [
                      "[parameters('vNETPrefix')]"
                  ]
              },
              "subnets": [
                  {
                      "name": "[parameters('dCSubnetName')]",
                      "properties": {
                          "addressPrefix": "[parameters('dCSubnetPrefix')]"
                      }
                  },
                  {
                      "name": "[parameters('iisSubnetName')]",
                      "properties": {
                          "addressPrefix": "[parameters('iisSubnetPrefix')]"
                      }
                  }
              ]
          }
      },
      {
          "name": "[parameters('adNicName')]",
          "type": "Microsoft.Network/networkInterfaces",
          "location": "[resourceGroup().location]",
          "apiVersion": "[variables('apiVersion')]",
          "dependsOn": [
              "[concat('Microsoft.Network/virtualNetworks/', 'vNET')]"
          ],
          "tags": {
              "displayName": "adNic"
          },
          "properties": {
              "ipConfigurations": [
                  {
                      "name": "ipconfig1",
                      "properties": {
                          "privateIPAllocationMethod": "Dynamic",
                          "subnet": {
                              "id": "[variables('adNicSubnetRef')]"
                          }
                      }
                  }
              ]
          }
      },
      {
          "name": "[variables('storageName')]",
          "type": "Microsoft.Storage/storageAccounts",
          "location": "[resourceGroup().location]",
          "apiVersion": "[variables('apiVersion')]",
          "dependsOn": [ ],
          "tags": {
              "displayName": "storage"
          },
          "properties": {
              "accountType": "[parameters('storageType')]"
          }
      }

  ],
    "outputs": {
    }
}
